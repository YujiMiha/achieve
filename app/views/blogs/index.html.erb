
<div class= "container contents">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <p><%= notice %></p>

    <h1>ブログ一覧</h1>
      <%= link_to "新規投稿", new_blog_path, class: "btn btn-default btn-primary" %>
    <% @blogs.each do |blog| %>
    <div class= "row">
      <h4><strong><%= blog.title %></strong></h4>
      <p><%= blog.content %></p>
        <p>ユーザーid:<%= blog.user_id %><%= blog.user.name %></p>

      <%= link_to "編集", edit_blog_path(blog.id), class: "btn btn-default btn-sm btn-success" %>
      <%= link_to "削除", blog_path(blog.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-default btn-sm btn btn-danger" %>
    </div>
    <% end %>

  </div>
</div>

<div id="page-top-btn" class="page-top-btn visible-place-200">
      <p><a class="move-page-top" id="move-page-top">▲</a></p>
  </div>